// Show the add post form
section(class="mdl-grid content" id="add-post")
  div(class="mdl-cell mdl-cell--12-col mdl-grid")
    div(class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--6-col-desktop")
      div(class="mdl-card__title mdl-color--light-blue-600 mdl-color-text--white")
          //h2(class="mdl-card__title-text")New Post
        div(class="mdl-card__supporting-text mdl-color-text--grey-600")
          form(id="message-form" action="/addPost" ng-submit="addPost()")
            div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
              label(class="mdl-textfield__label" for="title") Title
                input(class="mdl-textfield__input" type="text" data-ng-model="title" placeholder="Title" name="title")
            div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
              label(class="mdl-textfield__label" for="message") Message
                input(class="mdl-textfield__input" data-ng-model="message" placeholder="Message" name="message")
            input(type='submit', value='Write Message')


